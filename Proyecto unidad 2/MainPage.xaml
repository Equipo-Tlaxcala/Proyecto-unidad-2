<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_unidad_2.MainPage">

    <!-- Lista de personas -->
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Botón Agregar -->
            <Button Text="➕ Agregar Persona"
                Clicked="OnAgregarClicked"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                FontSize="16"
                HorizontalOptions="Center" />

            <!-- Lista de personas -->
            <CollectionView x:Name="PersonasCollection" SelectionMode="None"
                            HeightRequest="1000">
                <!-- Puedes ajustar este valor -->
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" CornerRadius="15">
                            <VerticalStackLayout>
                                <Label Text="{Binding Nombre}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Correo}" FontSize="14" />
                                <Label Text="{Binding Telefono}" FontSize="14" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
