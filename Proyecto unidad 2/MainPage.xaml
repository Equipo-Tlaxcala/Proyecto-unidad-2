<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_unidad_2.MainPage">

    <!-- Lista de personas -->
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Botón Agregar -->
            <Button Text="➕ Agregar Persona"
                Clicked="OnAgregarClicked"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                FontSize="16"
                HorizontalOptions="Center" />

            <!-- Lista de personas -->
            <CollectionView x:Name="PersonasCollection" SelectionMode="None" HeightRequest="1000">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" CornerRadius="15">
                            <Grid ColumnDefinitions="*, Auto">
                                
                                <!-- Columna izquierda: datos -->
                                <VerticalStackLayout Grid.Column="0" Spacing="5">
                                    <Label Text="{Binding Nombre}"  
                                           FontSize="18"  
                                           FontAttributes="Bold"
                                           VerticalOptions="Center" />

                                    <Label Text="{Binding Correo}" FontSize="14" />
                                    <Label Text="{Binding Telefono}" FontSize="14" />
                                </VerticalStackLayout>

                                <!-- Columna derecha: botón -->
                                <Button Grid.Column="1"
                                        Text="✏️ Editar"
                                        Clicked="OnEditarClicked"
                                        BindingContext="{Binding}"
                                        BackgroundColor="#00A693"
                                        TextColor="White"
                                        CornerRadius="20"
                                        HeightRequest="36"
                                        FontSize="14"
                                        Padding="16,0"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"
                                        Margin="10,0,0,0" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
